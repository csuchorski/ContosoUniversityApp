@model IEnumerable<ContosoUniversity.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Course number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                Department
            </th>
            <th>
                Controls
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var course in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem=> course.CourseID)</td>
                    <td>@Html.DisplayFor(modelItem => course.Title)</td>
                    <td>@Html.DisplayFor(modelItem => course.Credits)</td>
                    <td>@Html.DisplayFor(modelItem => course.Department.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-CourseID="@course.CourseID">Edit</a>|
                        <a asp-action="Details" asp-route-CourseID="@course.CourseID">Details</a>|
                        <a asp-action="Delete" asp-route-CourseID="@course.CourseID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



