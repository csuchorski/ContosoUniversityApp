@model ContosoUniversity.Models.Student

@{ ViewData["Title"] = "Delete";}

<div class="row">
    <div class="border p-3">
        <form method="post">
            <input asp-for="ID" hidden />
            <div class="form-group">
                <label asp-for="FirstMidName"></label>
                <input class="form-control" disabled asp-for="FirstMidName" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input class="form-control" disabled asp-for="LastName" />
            </div>
            <div class="form-group">
                <label asp-for="EnrollmentDate"></label>
                <input class="form-control"type="date" disabled asp-for="EnrollmentDate" />
            </div>
            <button class="btn btn-danger"type="submit">Delete</button>
        </form>
    </div>
</div>
